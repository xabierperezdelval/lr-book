<?xml version="1.0"?>  

<beans 
	default-destroy-method="destroy" 
	default-init-method="afterPropertiesSet" 
	xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >

	<!-- 1.Listeners -->
	<bean id="beanListenerId" class="com.InvitationMail" />

	<!-- 2.Distinations -->
	<bean id="beanDestinationId"
		class="com.liferay.portal.kernel.messaging.ParallelDestination"> 
		<property name="name" value="destinationBus"/>
	</bean>	

	<!-- 3.Configurators -->
	<bean id="messagingConfigurator"
		class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="destinationBus">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="beanListenerId" />
					</list>
				</entry>
			</map>
		</property>
		<property name="destinations">
			<list>
				<ref bean="beanDestinationId" />
			</list>
		</property>
	</bean>
</beans>